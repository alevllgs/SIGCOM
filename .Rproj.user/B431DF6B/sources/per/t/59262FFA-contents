# while  ----

suma <- 0

while (suma < 34) {
  
  suma  = suma + 4
  
  print(suma)

}

# CASINO
# LLEVO 8 DOLARES

# me retiro si llego a 500 dolares


dinero <- 8

while (dinero < 500) {
  
   dinero = dinero * 1.5 - 3
   print(dinero)
}

dinero = 10
dias = 1
while (dias < 15 & dinero < 500) {  # paro si son 15 dias o MAS de 500 dolares
  
  dinero = dinero * 1.5 - 3
  print(dinero)
  print(dias)
  
  print( paste("me retiro el dia",dias,"con:",dinero,"dolares")  )
  dias = dias + 1     #i = i + 1 o i++
}

# otra opcion
dinero = 10
dias = 1
while (dias < 150) {  # dias son igual o mas de 15
  
  dinero = dinero * 1.5 - 3
  print(dinero)
  print(dias)
  
    if (dinero > 500) {    # me retiro si ya GANE SUFICIENTE (>500)
      print( paste("me retiro el dia",dias,"con:",dinero,"dolares")  )
      break  # corta la iteracion (for o while) completamente
    }
  
  dias = dias + 1    
}


