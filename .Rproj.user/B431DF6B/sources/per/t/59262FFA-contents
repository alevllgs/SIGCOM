# case when ----

nombres <- c("Alejandra","Rocio","Angela")
nombre # Natalie


case_when( nombre != "Paula"   ~  4,
           nombre %in% nombres ~ 10,
           TRUE                ~  5)



nombres.m <- c("Alejandra","Rocio","Angela")
nombres.h <- c("Pedro","Juan","Diego")

nombre2 <- c("Rocio","Maria","Pedro") 

case_when( nombre2 %in% nombres.h   ~  4,
           nombre2 %in% nombres.m   ~ 10,
           TRUE                ~  "no esta en ninguna lista")

# 10 , "no esta..." ,  4


DICOM <- c("Alejandra","Rocio","Angela","Roberto")
CREDITO <- c("Pedro","Juan","Diego","Andrea")

nombres <- c("Rocio","Maria","Pedro","Andrea") 

case_when( nombres %in% DICOM   ~  "NO DAR DINERO",
           nombres %in% CREDITO   ~ "YA DEBE DINERO",
           TRUE                ~  "no esta en ninguna lista")

# uniendo listas

DICOM <- c("Alejandra","Rocio","Angela","Roberto")
CREDITO <- c("Pedro","Juan","Diego","Andrea")

lista_unida <- c(DICOM,CREDITO)
nombres <- c("Rocio","Maria","Pedro","Andrea") 

case_when( nombres %in% lista_unida   ~  "NO DAR DINERO",
           TRUE                ~  "no esta en ninguna lista")


