# ifelse ----


nombre <- "Alex" #                           , TRUE    , FALSE
ifelse( nombre == "Roberto" | nombre == "Alex", "Hombre", "Mujer")

lista <- c("Roberto","Alex","Juan","Pedro","Ricardo","Julio")


nombre <- "Natalie" 

ifelse( nombre %in% lista, "Hombre", "Mujer")


# el o-logico es |
# el y-logico es &

#ifelse(condicio, verdad, falso)

nota = 4
ifelse( ((nota < 1) | (nota > 7) | (is.numeric(nota) == FALSE)), # condicion
        print("Error, ingrese un número entre 1 y 7"),         # verdad
        ifelse(nota >= 4, "¡Felicitaciones!","Reprobaste"))


