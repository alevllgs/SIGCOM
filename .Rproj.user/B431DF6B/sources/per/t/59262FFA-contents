# funciones ----


meses <- c("Marzo","Abril","Mayo")
Ganancia <- c(1000,1300,1250)
Gastos <- c(900,560,865)


Ahorros_fun <- function(Ganancia,Gastos){
  
  ahorros <- Ganancia - Gastos
  
  print(ahorros)
  
  plot(Gastos,ahorros)
  
  #algo
}

Ahorros_fun(Ganancia = c(100,200),Gastos = c(30,175))

# opc 2
Ahorros_fun2 <- function(Ganancia,Gastos){
  
  ahorros <- Ganancia - Gastos
  
  #print(ahorros)
  
  plot(Gastos,ahorros)
  
  return(ahorros)
}

Ahorros_fun(Ganancia = c(100,200),Gastos = c(30,175))
Ahorros_fun2(Ganancia = c(100,200),Gastos = c(30,175))


casa <- data.frame(meses,Ganancia,Gastos)
casa


func2 <- function(BD){ # meses,ganancia,gastos
  
  #BD = rbind(BD, c("Junio",mean(BD$Ganancia),mean(BD$Gastos) ))
  
  BD = data.frame(meses = c(BD$meses,"Junio"), 
                  rbind(BD[,2:3],c(mean(BD$Ganancia),mean(BD$Gastos))))
  
  BD$Ahorros = BD$Ganancia - BD$Gastos
  BD$prestamo = BD$Ahorros*0.3
  
  return(BD)
}


func2(casa)





