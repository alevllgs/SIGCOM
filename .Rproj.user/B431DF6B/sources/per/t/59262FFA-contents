      if (cliente == "Juan") {
        next
      }
  print(paste("la deuda de",cliente,"es:",200) ) 
}


for (cliente in c("Paula","Pedro","Juan","Ariel")) {
  
  if (cliente != "Juan") {
    print(paste("la deuda de",cliente,"es:",200) ) 
    
  }
}

